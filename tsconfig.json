{
  "compilerOptions": {
    "outDir": "./dist/",
    "isolatedModules": true,
    "target": "ESNext",                      
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,     
    "skipLibCheck": true,
    "esModuleInterop": true,
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules/*/**"
  ]
}
